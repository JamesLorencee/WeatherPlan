<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".EditProfileActivity">

    <TextView
        android:id="@+id/EditProfile_textView"
        android:layout_width="274dp"
        android:layout_height="32dp"
        android:layout_marginTop="52dp"
        android:fontFamily="sans-serif-medium"
        android:text="Edit Profile"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameTv"
        android:layout_width="274dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Administrator"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditProfile_textView" />

    <TextView
        android:id="@+id/userEmailTv"
        android:layout_width="274dp"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="admin@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameTv" />

    <TextView
        android:id="@+id/editEmailAddressTextView"
        android:layout_width="125dp"
        android:layout_height="26dp"
        android:layout_marginTop="192dp"
        android:fontFamily="sans-serif-medium"
        android:text="Email Address"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/editEmailAddressRectangle"
        android:layout_width="311dp"
        android:layout_height="39dp"
        android:background="@drawable/rectangle_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmailAddressTextView" />

    <EditText
        android:id="@+id/et_editEmail"
        android:layout_width="305dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="6dp"
        android:background="#00000000"
        android:hint="New Email Address"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/editEmailAddressRectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editEmailAddressRectangle"
        app:layout_constraintTop_toTopOf="@+id/editEmailAddressRectangle" />

    <TextView
        android:id="@+id/editPasswordTextView"
        android:layout_width="125dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="New Password"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmailAddressRectangle" />

    <View
        android:id="@+id/editNewPasswordRectangle"
        android:layout_width="311dp"
        android:layout_height="39dp"
        android:background="@drawable/rectangle_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPasswordTextView" />

    <EditText
        android:id="@+id/et_editNewPassword"
        android:layout_width="305dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="6dp"
        android:background="#00000000"
        android:hint="New Password"
        android:inputType="textPassword"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/editNewPasswordRectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editNewPasswordRectangle"
        app:layout_constraintTop_toTopOf="@+id/editNewPasswordRectangle" />

    <TextView
        android:id="@+id/editConfirmPasswordTextView"
        android:layout_width="194dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Confirm Password"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNewPasswordRectangle" />

    <View
        android:id="@+id/editConfirmPasswordRectangle"
        android:layout_width="311dp"
        android:layout_height="39dp"
        android:background="@drawable/rectangle_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editConfirmPasswordTextView" />


    <EditText
        android:id="@+id/et_editConfirmPassword"
        android:layout_width="305dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="6dp"
        android:background="#00000000"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/editConfirmPasswordRectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editConfirmPasswordRectangle"
        app:layout_constraintTop_toTopOf="@+id/editConfirmPasswordRectangle" />

    <Button
        android:id="@+id/editProfileCancel_btn"
        android:layout_width="149dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/redbutton"
        android:fontFamily="sans-serif-medium"
        android:text="Cancel"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.837" />

    <Button
        android:id="@+id/editProfileSave_btn"
        android:layout_width="149dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bluebutton"
        android:fontFamily="sans-serif-medium"
        android:text="Save"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toEndOf="@+id/editProfileCancel_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>