<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page"
    tools:context=".ListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:background="@drawable/taskbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/list_todayTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/option_today"
            android:drawablePadding="3dp"
            android:layout_marginEnd="45dp"
            app:drawableTopCompat="@drawable/options_calendar"
            />

        <TextView
            android:id="@+id/listTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/option_list"
            android:drawablePadding="3dp"
            android:layout_marginEnd="45dp"
            app:drawableTopCompat="@drawable/options_list"
            />

        <TextView
            android:id="@+id/list_addTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/option_add"
            android:drawablePadding="3dp"
            android:layout_marginEnd="45dp"
            app:drawableTopCompat="@drawable/options_add"
            />

        <TextView
            android:id="@+id/list_accountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/option_account"
            android:drawablePadding="3dp"
            app:drawableTopCompat="@drawable/options_account"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>