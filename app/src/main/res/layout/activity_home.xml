<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/weather_logo"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/cloudlogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/calendar_home"
        app:layout_constraintBottom_toTopOf="@id/calendar_home"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="44sp"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintStart_toEndOf="@id/weather_logo"
        app:layout_constraintBottom_toBottomOf="@id/weather_logo"
        />

    <TextView
        android:id="@+id/weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintStart_toEndOf="@id/weather_temperature"
        app:layout_constraintBottom_toBottomOf="@id/weather_logo"
        />
    
    <CalendarView
        android:id="@+id/calendar_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="105dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/schedule_list"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_home"
        app:layout_constraintVertical_bias="0.533" />

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:background="@drawable/taskbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/option_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/option_today"
            android:drawablePadding="3dp"
            android:layout_marginEnd="45dp"
            app:drawableTopCompat="@drawable/options_calendar"
            />

        <TextView
            android:id="@+id/option_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/option_list"
            android:drawablePadding="3dp"
            android:layout_marginEnd="45dp"
            app:drawableTopCompat="@drawable/options_list"
            />

        <TextView
            android:id="@+id/option_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/option_add"
            android:drawablePadding="3dp"
            android:layout_marginEnd="45dp"
            app:drawableTopCompat="@drawable/options_add"
            />

        <TextView
            android:id="@+id/option_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/option_account"
            android:drawablePadding="3dp"
            app:drawableTopCompat="@drawable/options_account"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>